{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": "src",
    "noEmit": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ],
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["types.d.ts", "src"]
}
