{
  "schema": {
    "files": "**/*.gql"
  },
  "query": {
    "files": [
      {
        "match": [
          "src/**/*.ts",
          "src/**/*.tsx"
        ],
        "parser": [
          "EmbeddedQueryParser",
          {
            "startTag": "gql`",
            "endTag": "`"
          }
        ]
      },
      {
        "match": "**/*.js",
        "parser": [
          "EmbeddedQueryParser",
          {
            "startTag": "Relay\\.QL`",
            "endTag": "`"
          }
        ],
        "isRelay": true
      },
      {
        "match": "**/*.feature",
        "parser": [
          "EmbeddedQueryParser",
          {
            "startTag": "graphql request\\s+\"\"\"",
            "endTag": "\"\"\""
          }
        ]
      },
      {
        "match": "**/*.rb",
        "parser": [
          "EmbeddedQueryParser",
          {
            "startTag": "<<-GRAPHQL",
            "endTag": "GRAPHQL"
          }
        ]
      },
      {
        "match": "**/*.gql",
        "parser": "QueryParser"
      }
    ]
  }
}
