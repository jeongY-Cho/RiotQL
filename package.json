  "scripts": {
    "test": "jest",
    "riot-api-types": "ts-node ./src/scripts/RiotAPICodegen.ts http://www.mingweisamuel.com/riotapi-schema/openapi-3.0.0.min.json",
    "openapi-to-nexus-schema": "ts-node ./src/scripts/RiotAPIToNexusSchema.ts ./src/schema/riot-api-v4-schema.ts",
